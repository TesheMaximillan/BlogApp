<ul class="users">
  <% @users.each do |user| %>
    <li class="users__list">
      <div class="users__list--photo">
        <%= image_tag user.photo, :class => 'img' %>
      </div>
      <div class="users__list--details">
        <h4 class="name"><%= user.name %></h4>
        <p class="posts-counter">Number of posts: <strong><%= user.posts_counter %></strong></p>
      </div>
    </li>
  <% end %>
</ul>
